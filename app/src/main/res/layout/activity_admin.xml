<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.acpm.certpinning.Admin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bem vindo, "
        android:id="@+id/name_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seus dados:"
        android:id="@+id/textView4"
        android:layout_below="@+id/name_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ag:"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/ag_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conta:"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/cc_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Senha:"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/passw_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ag_txt"
        android:text="432"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginTop="19dp"
        android:layout_alignRight="@+id/cc_txt"
        android:layout_alignEnd="@+id/cc_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cc_txt"
        android:text="87234-5"
        android:layout_below="@+id/ag_txt"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/change_btn"
        android:layout_alignEnd="@+id/change_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passw_txt"
        android:text="81726354"
        android:layout_below="@+id/cc_txt"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/cc_txt"
        android:layout_alignEnd="@+id/cc_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:id="@+id/change_btn"
        android:layout_marginTop="17dp"
        android:onClick="change"
        android:layout_below="@+id/passw_txt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/error_adm_txt"
        android:layout_marginTop="25dp"
        android:textColor="#ffff130b"
        android:layout_below="@+id/change_btn"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
